{
  "name": "nodemailer-openssl-smime",
  "version": "1.0.0",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "description": "",
  "gypfile": true,
  "main": "dist/index.js",
  "files": [
    "dist/",
    "prebuilds/"
  ],
  "scripts": {
    "install": "node-gyp-build",
    "prebuild": "rimraf dist build prebuilds",
    "build:gyp": "node-gyp-build",
    "build:tsc": "tsc",
    "build:prebuildify": "prebuildify --napi --strip",
    "build": "npm run build:gyp && npm run build:tsc && npm run build:prebuildify",
    "test": "jest",
    "test:debug": "DEBUG=testcontainers* jest"
  },
  "dependencies": {
    "node-gyp-build": "^4.5.0",
    "nodemailer": "^6.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "jest": "^29.3.1",
    "node-addon-api": "^5.0.0",
    "prebuildify": "^5.0.1",
    "rimraf": "^3.0.2",
    "testcontainers": "^9.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "test"
    ],
    "testTimeout": 30000
  }
}
